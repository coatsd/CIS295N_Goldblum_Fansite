@model List<Story>

@{
    ViewData["Title"] = "Posts";
    ViewData["Comment"] = "This page displays the stories that have been posted by users.";
    Layout = "_TableLayout";
}
<!--
<label>Alphabetize?</label>
<button asp-action="Alphabetize">Yes Please!</button>
-->

<h3>Posts: @ViewBag.PostCount</h3>

<table>
    <thead>
        <tr>
            <th>Posts</th>
            <th>Replies</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <h4>@Model[i].Header</h4>
                    <p>&#160 &#160 &#160 @Model[i].Body</p>
                </td>
                <td>
                    @for (int j = 0; j < Model[i].Replies.Count; j++)
                    {
                        <a>
                            @Model[i].Replies[j].Rating/5 &#160 @Model[i].Replies[j].Header
                        </a><br />
                    }
                    <a asp-action="ReplyForm" asp-route-header="@Model[i].Header">Post a Reply</a>
                </td>
            </tr>
        }
    </tbody>
</table>