@model List<Media>

@{
    ViewData["Title"] = "Media Sources";
    ViewData["Comment"] = "This page will contain media that talks about Jeff Goldblum.";
    Layout = "_TableLayout";
}

<table>
    <tr>
        <th>Media</th>
        <th>Links</th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].Title <br />
            @Model[i].Artist <br />
            @Model[i].Type</td>
            <td>
                <a href="@Model[i].Link">@Model[i].Link</a>
            </td>
        </tr>
    }
</table>